<UserControl
    x:Class="WarUp.Canvases.GameSwapChain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WarUp.Canvases"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<Grid x:Name="EditorSwapChainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2" SizeChanged="EditorSwapChainGrid_SizeChanged">
		<win2d:CanvasSwapChainPanel x:Name="SwapChainPanel"
				PointerPressed="SwapChainPanel_PointerPressed" PointerReleased="SwapChainPanel_PointerReleased"
				PointerWheelChanged="SwapChainPanel_PointerWheelChanged" PointerMoved="SwapChainPanel_PointerMoved"/>
	</Grid>
</UserControl>
